function longestSubarray(arr, k) {
    let maxLen = 0;
    let i = 0;
    let j = 0;
    let sum = 0;

    while (j < arr.length) {
        sum += arr[j];
        while (sum > k) {
            sum -= arr[i];
            i++;
        }
        if (sum === k) {
            maxLen = Math.max(maxLen, j - i + 1);
        } 
        j++;
    }
    
    return maxLen;
}

console.log(longestSubarray([10, 5, 2, 7, 1, 9], 15)); 
